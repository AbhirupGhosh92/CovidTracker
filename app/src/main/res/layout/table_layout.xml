<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout
    android:weightSum="1"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:id="@+id/area_text"
        android:text="State"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounnded_backgroud"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/total_count"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_weight="0.2"
        android:layout_marginEnd="2dp"
        android:layout_height="wrap_content"
        android:text="Cofirmed"
        android:background="@drawable/rounnded_backgroud"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/area_text"
        app:layout_constraintBottom_toBottomOf="@id/area_text"
        app:layout_constraintRight_toLeftOf="@id/recovered_count"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:id="@+id/area_text_active"
        android:gravity="center"
        android:text="Active"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounnded_backgroud"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recovered_count"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounnded_backgroud"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Recovered"
        android:layout_marginEnd="2dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/area_text"
        app:layout_constraintBottom_toBottomOf="@id/area_text"
        app:layout_constraintRight_toLeftOf="@id/death_count"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/death_count"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:background="@drawable/rounnded_backgroud"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="Deaths"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/area_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/area_text" />


</LinearLayout>
</layout>